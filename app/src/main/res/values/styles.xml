<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom ProgressBar style -->
    <style name="CustomProgressBar" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateTint">@color/blue</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Small</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Custom SearchView style -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_clear</item>
    </style>
</resources>
